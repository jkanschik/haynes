= form_for [:admin, @publisher] do |f|
  = render partial: '/errors', locals: {object: @publisher}

  .row
    = f.label :label
    = f.text_field :label, size: 60, max_length: 100
  .row
    = f.label :name
    = f.text_field :name, size: 60, max_length: 255
  .row
    = f.label :city
    = f.text_field :city, size: 60, max_length: 60
  .row
    = f.label :country_id
    = f.select :country_id, countries, include_blank: true
  .row
    = f.label :www
    = f.text_field :www, size: 60, max_length: 100
  .row
    = f.label :verlag_category
    = f.select :verlag_category, categories
  .row
    = f.label :comment_english
    = f.text_area :comment_english, cols: 50, rows: 3
  .row
    = f.label :done
    = f.check_box :done, {}, 'Y', 'N'
  .row
    = f.label :successor_id
    = f.select :successor_id, publishers, include_blank: true
  .row
    = f.label :intern_info
    = f.text_area :intern_info, cols: 50, rows: 3
  .row
    = f.label :state
    = f.select :state, code_select('state'), {}, {:onchange => "if (this.value != 'default') alert('Warning: You changed the state to something other than <default>!');"}

  .actions
    = f.submit
    = link_to 'Cancel', admin_publisher_path(@publisher) unless @publisher.new_record?

